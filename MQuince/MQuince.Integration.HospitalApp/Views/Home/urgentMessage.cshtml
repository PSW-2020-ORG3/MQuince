@{
    ViewData["Title"] = "urgentMessage";
    Layout = "_Layout";
}
@model IEnumerable<MQuince.Integration.Entities.GrpcMessage>

    <div id="urgentMesssage-container">
        <h3> Enter the medicine: </h3>
        <table class="table" id="table" style="margin-top: 0px; padding: -5px;" border="1px">
            <tr style="margin-top: -5px;">
                <td><label> Medication name: </label></td>
            </tr>
            <tr> <td> <input type="text" id="name" /></td></tr>

            <tr> <td><label> Quantity: </label></td></tr>
            <tr> <td> <input type="text" id="quantity" /></td></tr>
            <tr>
                <td>
                    <button  class="send" onclick="alert('Medication was successefully send to pharmacy!')">Send GRPC</button>
                </td>
            </tr>
            <tbody>
                @foreach (var a in Model)
                {
                    <p>
                        Medication @Html.DisplayFor(modelItem => a.Name) @Html.DisplayFor(modelItem => a.Status)
                    </p>
                }
            </tbody>
        </table>
        
        <script>


        </script>

        <script src="~/Views/assets/js/urgentMedication.js"></script>
        <script src="~/Views/assets/js/jquery.min.js"></script>
        
    </div>
